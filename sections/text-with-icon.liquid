{{ 'text-with-icon.css' | asset_url | stylesheet_tag }}

<style>
  #shopify-section-{{ section.id }}{
    --heading-color: 40, 40, 40;
    --color-body: {{ section.settings.title_color }};
    --title-color: {{ section.settings.text_color }};
    --section-collage-column: {{ section.settings.number_column }}
    ;
    --section-collage-column: {{ section.settings.number_column }};
    {% comment %}
      --vertical-breather: 40px; /* Inner spacing is smaller on this section */;
    {% endcomment %}
    background-color: {{ section.settings.section_background }}
    ;
    overflow: hidden;
    --gradient-base-accent-2: {% if section.settings.gradient_accent_2 != blank %}
      {{ section.settings.gradient_accent_2 }}
    {% else %}
      {{ settings.colors_accent_2 }}
    {% endif %};
  }
  @media(min-width: 990px) {
    #shopify-section-{{ section.id }} .section-text_withicon{
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  {% if section.settings.bg_textwithicon != blank %}
    .text-with-icon_background {
      background-image: url({{ section.settings.bg_textwithicon | image_url: width: 2000 }});
      background-position: inherit;
      background-repeat: no-repeat;
      background-size: cover;
    }
  {% endif %}
</style>
<section class="section section--flush">

      {% liquid 
      case section.settings.text-icon_type
      when "type-1"
        render 'featured-text-with-icon-type1'
      when "type-2"
        render 'featured-text-with-icon-type2'
        when "type-3"
        render 'featured-text-with-icon-type3'
      else
        render 'featured-text-with-icon-type1'
      endcase
    %}
    
</section>


